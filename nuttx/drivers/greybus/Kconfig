config GREYBUS_CONTROL_PROTOCOL
	bool "Control Protocol support"
	default n

config GREYBUS_GPIO_PHY
	bool "GPIO PHY support"
	select GPIO
	default n

config GREYBUS_I2C_PHY
	bool "I2C PHY support"
	select I2C
	select I2C_TRANSFER
	default n

config GREYBUS_SPI_PHY
	bool "SPI PHY support"
	select DEVICE_CORE
	default n

config GREYBUS_BATTERY_PHY
	bool "Battery support"
	default n

config GREYBUS_LOOPBACK_PHY
	bool "Loopback support"
	default n

config GREYBUS_VIBRATOR
	bool "Vibrator support"
	select GPIO
	default n

config GREYBUS_USB_HOST_PHY
	bool "USB Host PHY support"
	depends on ARCH_HAVE_USB_HOST
	default n

config GREYBUS_PWM_PHY
	bool "PWM PHY support"
	select DEVICE_CORE
	default n

config GREYBUS_I2S_PHY
	bool "I2S PHY support"
	select DEVICE_CORE
	select LIB_RING_BUF
	default n
	
	
config GREYBUS_I2S_UPSCALE
	bool "I2S upscale support"
	depends on GREYBUS_I2S_PHY
	default n
		
config GREYBUS_I2S_DUAL_PORTS
    bool "I2S dual port support"
	depends on GREYBUS_I2S_PHY
	default n

